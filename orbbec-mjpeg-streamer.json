{
  "host": "0.0.0.0",
  "port": 8081,
  "camera_port_index": 0,
  "video_params": {
      "width": 1280,
      "height": 720,
      "fps": 30,
      "contrast": 32,
      "saturation": 64,
      "hue": 0,
      "gain": 0,
      "white_balance_temperature": 4600,
      "sharpness": 3,
      "backlight_compensation": 1,
      "exposure_auto": 3,
      "exposure_absolute": 157
  },
  "last_frame_timeout": 10,
  "access_log_format": "%a %{X-Real-IP}i %t \"%r\" %s %b \"%{User-Agent}i\" %D",
  "logging": {
      "version": 1,
      "handlers": {
          "console": {
              "class": "logging.StreamHandler",
              "formatter": "default",
              "level": "CRITICAL"
          },
          "file": {
              "class": "logging.handlers.RotatingFileHandler",
              "filename": "/var/log/cam1/orbbec-mjpeg-streamer.log",
              "maxBytes": 1048576,
              "backupCount": 4,
              "formatter": "default",
              "level": "DEBUG"
          },
          "access_log": {
              "class": "logging.handlers.RotatingFileHandler",
              "filename": "/var/log/cam1/access.log",
              "maxBytes": 1048576,
              "backupCount": 4,
              "formatter": "access_log",
              "level": "DEBUG"
          }
      },
      "loggers":{
          "aiohttp.access":{
              "handlers": ["access_log"],
              "level": "DEBUG"
          },
          "app":{
              "handlers": ["file"],
              "level": "DEBUG"
          },
          "m7-aiohttp":{
              "handlers": ["file"],
              "level": "DEBUG"
          },
          "orbbec-mjpeg-streamer":{
              "handlers": ["file"],
              "level": "DEBUG"
          }
      },
      "formatters":{
          "default":{
              "format":"%(asctime)s - %(name)s - %(levelname)s - %(message)s"
          },
          "access_log":{
              "format":"%(message)s"
          }
      },
      "root": {
          "level": "ERROR",
          "handlers": ["console"]
      }
  }
}
